<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="socialbeerproject.appas.Activity.Profil">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon" />

    <Button
        android:id="@+id/edit"
        style="@style/GrosBouton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="60dp"
        android:text="Edit" />

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/orange"
        android:layout_toRightOf="@id/edit"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="Paul"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="Zytophile confirmé"
            android:layout_below="@id/nom"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="Inscrit depuis 5 jours"
            android:layout_below="@id/status"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/nbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D07601"
            android:textColor="@color/white"
            android:text="Nbr de bières"
            android:layout_marginTop="20dp"
            android:layout_below="@id/date"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/nbr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D07601"
            android:textColor="@color/white"
            android:text="46"
            android:layout_marginTop="20dp"
            android:layout_below="@id/date"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/nbr"
            android:gravity="right"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dernier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D07601"
            android:textColor="@color/white"
            android:text="Dernière bière"
            android:layout_marginTop="5dp"
            android:layout_below="@id/nbr"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/dernier2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D07601"
            android:textColor="@color/white"
            android:text="Leffe"
            android:layout_marginTop="5dp"
            android:layout_below="@id/nbr"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/dernier"
            android:gravity="right"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D07601"
            android:textColor="@color/white"
            android:text="Nbr de points"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dernier"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/points2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D07601"
            android:textColor="@color/white"
            android:text="3"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dernier"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/points"
            android:gravity="right"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</RelativeLayout>
