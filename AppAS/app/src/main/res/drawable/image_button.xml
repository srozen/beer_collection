<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/ambre" />
            <gradient android:angle="-90" android:startColor="@color/mousse" android:centerColor="@color/blond"  android:endColor="@color/blond"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/ambre" />
            <gradient android:angle="-90" android:startColor="@color/mousse" android:centerColor="@color/blond"  android:endColor="@color/blond"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:startColor="@color/mousse" android:centerColor="@color/blond"  android:endColor="@color/mousse"/>
        </shape>
    </item>
</selector>