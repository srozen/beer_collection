<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/darkAmbre" />
            <gradient android:startColor="@color/mousse" android:centerColor="@color/blond" android:endColor="@color/ambre"  />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/darkAmbre" />
            <gradient android:startColor="@color/mousse" android:centerColor="@color/blond" android:endColor="@color/ambre"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dp" android:color="@color/ambre" />
            <gradient android:startColor="@color/darkAmbre" android:centerColor="@color/blond" android:endColor="@color/ambre"  />
        </shape>
    </item>
</selector>