<resources>
    <!-- ThÃ¨mes -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar">
        <item name="android:background">@color/mousse</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:alertDialogTheme">@style/DialogTheme</item>
        <item name="android:alertDialogStyle">@style/AlertDialogColor</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@android:style/TextAppearance.Holo.DialogWindowTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- Styles -->

    <!-- Dialog -->
    <style name="DialogAlertStyle" parent="@style/DialogTheme">
        <item name="android:windowTitleStyle">@style/DialogAlertTitre</item>
        <item name="android:textAppearanceMedium">@style/DialogAlertTexte</item>
        <item name="android:borderlessButtonStyle">@style/DialogAlertButton</item>
        <item name="android:buttonBarStyle">@style/DialogAlertBarButton</item>
    </style>

    <style name="DialogAlertBarTitre">
        <item name="android:textAppearance">@style/DialogAlertTitre</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="DialogAlertTitre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/titreSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ambre</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="DialogAlertTexte" parent="@style/SimpleTexte">
    </style>

    <style name="DialogAlertButton" parent="@style/GrosBouton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogAlertBarButton" parent="android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@color/mousse</item>
    </style>

    <style name="AlertDialogColor">
        <item name="android:fullDark">@color/mousse</item>
        <item name="android:topDark">@color/mousse</item>
        <item name="android:centerDark">@color/mousse</item>
        <item name="android:bottomDark">@color/mousse</item>
        <item name="android:fullBright">@color/mousse</item>
        <item name="android:topBright">@color/mousse</item>
        <item name="android:centerBright">@color/mousse</item>
        <item name="android:bottomBright">@color/mousse</item>
        <item name="android:bottomMedium">@color/mousse</item>
        <item name="android:centerMedium">@color/mousse</item>
    </style>


    <!-- Style Textes - boutton -->
    <style name="Titre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/titreSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ambre</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="SimpleTexte">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texteSize</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="LittleSimpleTexte">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/littleTexteSize</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ChampsUneLigne">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="GrosBouton">
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/boutton</item>
    </style>
    <style name="TitreMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F00000</item>
        <item name="android:paddingLeft">1dip</item>
    </style>
    <style name="DescrMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0000F0</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="ImageMenu">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/icon</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="TitreCollection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0000F0</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="ImageCollection">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/icon</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
</resources>
