<resources>
    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar">
        <item name="android:textColor">@color/background</item>
    </style>
    <style name="Titre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/titreSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/ambre</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="SimpleTexte">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texteSize</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/blond</item>
    </style>
    <style name="ChampsUneLigne">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
