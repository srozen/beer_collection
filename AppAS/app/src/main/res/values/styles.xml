<resources>
    <!-- ThÃ¨mes -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar">
        <item name="android:background">@color/mousse</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="MenuPTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:selectableItemBackground">@drawable/bar_item</item>
        <item name="android:background">@color/mousse</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    <!-- Styles -->

    <!-- ActionBar -->
    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/mousse</item>

    </style>

    <!-- Style Textes - boutton -->
    <style name="Titre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/titreSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkAmbre</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="SimpleTexte">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/texteSize</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/ambre</item>
    </style>
    <style name="LittleSimpleTexte">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/littleTexteSize</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ChampsUneLigne">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="GrosBouton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkAmbre</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/boutton</item>
    </style>
    <style name="TitreMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/darkAmbre</item>
        <item name="android:background">@color/mousse</item>
        <item name="android:paddingLeft">1dip</item>
    </style>
    <style name="DescrMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ambre</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:background">@color/mousse</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="ImageMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/mousse</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
</resources>
